{
	"name": "iceberg-theme",
	"displayName": "Iceberg Theme",
	"description": "Dark blue color theme",
	"version": "1.1.1",
	"publisher": "cocopon",
	"license": "MIT",
	"homepage": "https://cocopon.github.io/iceberg.vim/",
	"repository": {
		"type": "git",
		"url": "https://github.com/cocopon/vscode-iceberg-theme.git"
	},
	"engines": {
		"vscode": "^1.11.0"
	},
	"icon": "assets/icon.png",
	"galleryBanner": {
		"color": "#161821",
		"theme": "dark"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Iceberg",
				"uiTheme": "vs-dark",
				"path": "./themes/iceberg.color-theme.json"
			},
			{
				"label": "Iceberg Light",
				"uiTheme": "vs",
				"path": "./themes/iceberg-light.color-theme.json"
			}
		]
	},
	"scripts": {
		"test": "npm run lint",
		"build": "node src/main.js",
		"format": "prettier -w 'src/**/*.js'",
		"lint": "prettier -c 'src/**/*.js'"
	},
	"private": true,
	"devDependencies": {
		"chroma-js": "^2.1.0",
		"prettier": "^2.2.1"
	}
}
